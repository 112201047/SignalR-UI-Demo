<Window x:Class="SignalR_UI_Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SignalR_UI_Demo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel x:Name="RootStackPanel"
            Orientation="Vertical"
            VerticalAlignment="Center"
            Margin="20">

            <!-- CONNECT -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                <Label Content="Meeting ID" Width="90" VerticalContentAlignment="Center"/>
                <TextBox x:Name="MeetingIdTextBox" Width="150" Margin="0,0,40,0 "/>

                <Label Content="User ID" Width="70" VerticalContentAlignment="Center"/>
                <TextBox x:Name="UserIdTextBox" Width="150" Margin="0,0,100,0"/>

                <Button x:Name="ConnectButton"
                Content="Connect"
                Width="120"
                Click="ConnectButton_Click"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                <Label Content="Status:" Width="50" VerticalContentAlignment="Center"/>
                <TextBlock x:Name="StatusTextBlock" Width="500" VerticalAlignment="Center"/>
            </StackPanel>
            <!-- CHAT -->
            <TextBox x:Name="ChatDisplayTextBox"
             Height="200"
             Margin="0,0,0,20"
             Background="LightGray"
             TextWrapping="Wrap"
             VerticalScrollBarVisibility="Auto"
             IsReadOnly="True"
             IsEnabled="False"/>

            <!-- SEND MESSAGE -->
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="MessageTextBox"
                 Width="400"
                 Height="40"
                 Margin="0,0,10,0"
                 IsEnabled="False"/>

                <Button x:Name="SendMessageButton"
                Content="Send"
                Width="100"
                Height="40"
                Click="SendMessageButton_Click"
                IsEnabled="False"/>
            </StackPanel>

        </StackPanel>

    </Grid>
</Window>
